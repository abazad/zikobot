<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="localMusicViewModel"
            type="com.startogamu.musicalarm.viewmodel.fragment.LocalMusicViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemViewBinder="@{localMusicViewModel.itemsBinder}"
            app:items="@{localMusicViewModel.items}"
            tools:listitem="@layout/item_local_track" />
    </LinearLayout>
</layout>
