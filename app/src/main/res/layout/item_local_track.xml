<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="itemLocalTrackViewModel"
            type="com.startogamu.musicalarm.viewmodel.items.ItemLocalTrackViewModel" />
    </data>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:onClick="@{itemLocalTrackViewModel.onTrackClicked}"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/item_icon_size"
                android:layout_height="@dimen/item_icon_size"
                tools:src="@drawable/ic_picture_loading"
                app:imageUrl="@{itemLocalTrackViewModel.imagePath}"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{itemLocalTrackViewModel.name}"
                    android:textSize="20sp"
                    tools:text="Nom de la musique" />

                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_queue_music"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_queue_music"
                    android:gravity="center_vertical"
                    android:text="@{itemLocalTrackViewModel.artistName}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:text="Artiste" />
            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>

</layout>
