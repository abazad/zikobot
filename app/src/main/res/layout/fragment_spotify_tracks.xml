<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="me.tatarka.bindingcollectionadapter.LayoutManagers" />

        <variable
            name="fragmentSpotifyTracksVM"
            type="com.startogamu.zikobot.viewmodel.fragment.spotify.FragmentSpotifyTracksVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/actionBarSize"
            app:itemView="@{fragmentSpotifyTracksVM.itemView}"
            app:items="@{fragmentSpotifyTracksVM.items}"
            app:layoutManager="@{LayoutManagers.linear()}"
            tools:listitem="@layout/item_playlist" />
    </LinearLayout>
</layout>
